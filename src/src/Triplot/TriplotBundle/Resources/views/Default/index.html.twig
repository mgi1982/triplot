{% extends '::triplot.html.twig' %}

{% block content %}
    <ul id="timeline">
        {% for day in days %}
            <li class='day' data='{{day}}'>{{ day }}</li>
        {% else %}
           <li>There is no Pictures</li>
        {% endfor %}
        <li class='day' data=''>All</li>
        <li class='day slideshow'>Start</li>
    </ul>
    <div id='map' style="position: absolute; width: 100%; height: 100%">
        <div id="mapa" style="width: 100%; height: 100%">
        </div>
    </div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	{% javascripts
		'@TriplotTriplotBundle/Resources/public/js/triplot.js' %}
		<script src="{{ asset_url }}" type="text/javascript"></script>
	{% endjavascripts %}
    {{includeJsonFotos|raw}}
{% endblock %}
        
{% block stylesheets %}
	{{ parent() }}
	{% stylesheets 
		'@TriplotTriplotBundle/Resources/public/css/styles.css' %} 
		<link href="{{ asset_url }}" rel="stylesheet" media="screen" />
	{% endstylesheets %} 
{% endblock %}